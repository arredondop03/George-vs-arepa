var frames = 0;

function update(){
  frames++;
  if(frames%60 === 1){
    box.x = Math.floor((Math.random() * window.innerWidth) + 1)
    boxes.push(box);
  }
  for(var i = 0; i< boxes.length ; i++){
    ctx.fillRect(box.x, boxes[i].y+=10, 70, 70);
  }
}
